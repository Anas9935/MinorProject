<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:layout_above="@id/bottom_navigation"
    android:scrollbars="none">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:layout_marginLeft="16dp"
            android:fontFamily="@font/font_regular"
            android:text="Name"
            android:textSize="14sp"
            android:textColor="#8992A3"
            >
        </TextView>
        <RelativeLayout
            android:visibility="visible"
            android:id="@+id/name_layout"
            android:layout_below="@id/name_txt"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/user_un_edit_background"
            >
            <TextView
                android:id="@+id/user_name_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="13dp"
                tools:text="Mohammad Ravil"
                android:textColor="#000000"
                android:fontFamily="@font/font_semibold"
                android:textSize="16sp">
            </TextView>
        </RelativeLayout>
        <TextView
            android:layout_below="@id/name_layout"
            android:id="@+id/dob_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:fontFamily="@font/font_regular"
            android:text="Username"
            android:textSize="14sp"
            android:textColor="#8992A3"
            >
        </TextView>
        <RelativeLayout
            android:id="@+id/dob_layout"
            android:layout_below="@id/dob_txt"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/user_un_edit_background"
            >
            <TextView
                android:id="@+id/username_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="13dp"
                tools:text="ravil123"
                android:fontFamily="@font/font_semibold"
                android:textColor="#000000"
                android:textSize="16sp">
            </TextView>
        </RelativeLayout>
        <TextView
            android:layout_below="@id/dob_layout"
            android:id="@+id/phone_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:fontFamily="@font/font_regular"
            android:text="Phone"
            android:textSize="14sp"
            android:textColor="#8992A3"
            >
        </TextView>
        <RelativeLayout
            android:id="@+id/phone_layout"
            android:layout_below="@id/phone_txt"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/user_un_edit_background"
            >
            <TextView
                android:id="@+id/user_phone_dial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingRight="13dp"
                android:paddingLeft="13dp"
                android:text="+91 "
                android:textColor="#000000"
                android:fontFamily="@font/font_semibold"
                android:textSize="16sp">
            </TextView>
            <View
                android:id="@+id/view_vertical"
                android:layout_width="2dp"
                android:layout_height="44dp"
                android:background="#DCDDDE"
                android:layout_toRightOf="@id/user_phone_dial">
            </View>
            <TextView
                android:layout_toRightOf="@id/view_vertical"
                android:id="@+id/user_phone_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingRight="13dp"
                android:paddingLeft="13dp"
                tools:text="999999999"
                android:textColor="#000000"
                android:fontFamily="@font/font_semibold"
                android:textSize="16sp">
            </TextView>
        </RelativeLayout>
        <TextView
            android:layout_below="@id/phone_layout"
            android:id="@+id/email_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/font_regular"
            android:layout_marginLeft="16dp"
            android:text="Email"
            android:textSize="14sp"
            android:textColor="#8992A3"
            >
        </TextView>
        <RelativeLayout
            android:visibility="visible"
            android:id="@+id/email_layout"
            android:layout_below="@id/email_txt"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/user_un_edit_background"
            >
            <TextView
                android:id="@+id/user_email_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="13dp"
                tools:text="mohdravil000@gmail.com"
                android:textColor="#000"
                android:fontFamily="@font/font_semibold"
                android:textSize="16sp">
            </TextView>
        </RelativeLayout>
        <TextView
            android:layout_below="@id/email_layout"
            android:id="@+id/gender_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:text="Gender"
            android:fontFamily="@font/font_regular"
            android:textSize="12sp"
            android:textColor="#8992A3"
            >
        </TextView>
        <RelativeLayout
            android:id="@+id/gender_layout"
            android:layout_below="@id/gender_txt"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/user_un_edit_background"
            >
            <TextView
                android:id="@+id/user_gender_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="13dp"
                tools:text="Male"
                android:textColor="#000000"
                android:fontFamily="@font/font_semibold"
                android:textSize="16sp">
            </TextView>
        </RelativeLayout>
        <TextView
            android:layout_below="@id/gender_layout"
            android:id="@+id/age_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:text="Age"
            android:fontFamily="@font/font_regular"
            android:textSize="14sp"
            android:textColor="#8992A3"
            >
        </TextView>
        <RelativeLayout
            android:id="@+id/age_layout"
            android:layout_below="@id/age_txt"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/user_un_edit_background"
            >
            <TextView
                android:id="@+id/user_age_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="13dp"
                tools:text="62"
                android:textColor="#000000"
                android:fontFamily="@font/font_semibold"
                android:textSize="16sp">
            </TextView>
        </RelativeLayout>
        <TextView
            android:layout_below="@id/age_layout"
            android:id="@+id/height_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:text="Height"
            android:fontFamily="@font/font_regular"
            android:textSize="14sp"
            android:textColor="#8992A3"
            >
        </TextView>
        <RelativeLayout
            android:id="@+id/height_layout"
            android:layout_below="@id/height_txt"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/user_un_edit_background"
            >
            <TextView
                android:id="@+id/user_height_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="13dp"
                tools:text="175 cms."
                android:textColor="#000000"
                android:fontFamily="@font/font_semibold"
                android:textSize="16sp">
            </TextView>
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>
<com.google.android.material.bottomnavigation.BottomNavigationView
android:id="@+id/bottom_navigation"
android:layout_width="match_parent"
android:layout_height="60dp"
android:layout_alignParentBottom="true"
android:background="#ffffff"
android:backgroundTint="#00000000"
app:itemIconSize="24dp"
app:labelVisibilityMode="labeled"
app:itemIconTint="@color/bottom_navigationview_colored"
app:itemTextColor="@color/bottom_navigationview_colored"
app:layout_constraintBottom_toBottomOf="parent"
app:menu="@menu/bottom_navbar"
tools:layout_editor_absoluteX="-9dp"
tools:targetApi="lollipop">
</com.google.android.material.bottomnavigation.BottomNavigationView>
</RelativeLayout>

