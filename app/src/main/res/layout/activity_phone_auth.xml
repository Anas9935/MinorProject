<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".LoginActivities.PhoneAuthActivity"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:id="@+id/def_img"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"
        android:src="@drawable/hand">

    </ImageView>
        <LinearLayout
            android:id="@+id/lineartxt"
            android:layout_width="match_parent"
            android:layout_below="@id/def_img"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/mobile_txt1"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                tools:ignore="MissingConstraints"
                android:text="Give Us Your Mobile Number"
                android:textSize="26sp"
                android:textColor="#000000">
            </TextView>
            <TextView
                android:id="@+id/mobile_txt2"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints"
                android:layout_marginLeft="8dp"
                android:text="We need your mobile number to link with our app"
                android:textSize="16sp"
                >
            </TextView>
        </LinearLayout>
        <com.rilixtech.widget.countrycodepicker.CountryCodePicker
            android:layout_marginTop="25dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/lineartxt"
            android:layout_width="72dp"
            android:layout_height="44dp"
            android:background="@drawable/edittext_border"
            android:layout_gravity="center"
            android:paddingLeft="5dp"
            android:paddingTop="7dp"
            app:ccp_textColor="#000"
            app:ccp_textSize="16sp"
            android:id="@+id/ccp"
            app:ccp_keyboardAutoPopOnSearch="true"
            app:ccp_arrowSize="30dp"
            app:ccp_hideNameCode="true"
            app:ccp_showFlag="false"
            app:ccp_dialogTextColor="#000"
            app:ccp_backgroundColor="#feffff"/>
        <ImageView
            android:id="@+id/cross_tic_img"
            android:visibility="invisible"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginTop="38dp"
            android:layout_marginRight="30dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/cross_imgphone"
            android:layout_below="@id/lineartxt">
        </ImageView>
        <EditText
            android:layout_below="@id/lineartxt"
            android:layout_toRightOf="@id/ccp"
            android:id="@+id/phone_number"
            android:layout_width="match_parent"
            android:layout_marginRight="20dp"
            android:layout_height="44dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/edittext_border"
            android:hint="Enter Phone Number"
            android:inputType="phone"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:paddingLeft="19dp"
            android:textColor="#000000"
            android:textCursorDrawable="@null"
            android:paddingRight="13dp"
            android:layout_marginLeft="10dp">
        </EditText>
        <TextView
            android:id="@+id/proceed_btn"
            android:enabled="false"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:text="Proceed"
            android:gravity="center"
            android:layout_below="@id/phone_number"
            android:textColor="#ffffff"
            android:background="@drawable/button_border"
            android:layout_height="44dp">
        </TextView>
    </RelativeLayout>
